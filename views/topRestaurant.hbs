<h1>Top10 Restaurants</h1>
<hr />


<div class="d-flex flex-column">
  {{#each restaurants}}
  <div class="card mb-3 col-12 m-2" style="max-width: 540px;">
    <div class="row no-gutters">
      <div class="col-md-4">
        <img src="{{this.image}}" class="card-img" alt="restaurant-img">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <span class="badge badge-secondary">Bookmarks{{this.FavoriteCount}}</span>
          <p class="card-text">{{this.description}}</p>
          <div class=" d-flex">
            <a href="/restaurants/{{this.id}}" class="btn btn-primary mr-3">Show</a>
            {{#if this.isFavorited}}
            <form action="/favorite/{{this.id}}?_method=DELETE" method="POST">
              <button type="submit" class="btn btn-danger">Unfavorite</button>
            </form>
            {{else}}
            <form action="/favorite/{{this.id}}" method="POST">
              <button type="submit" class="btn btn-primary">Favorite</button>
            </form>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>